<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oliwen.data.TradeConfigMapper">
  <resultMap id="BaseResultMap" type="com.oliwen.pojo.TradeConfig">
    <constructor>
      <idArg column="id" javaType="java.lang.Integer" jdbcType="INTEGER" />
      <arg column="sdk_price_url" javaType="java.lang.String" jdbcType="VARCHAR" />
      <arg column="sdk_to_usdt_url" javaType="java.lang.String" jdbcType="VARCHAR" />
      <arg column="symbol" javaType="java.lang.String" jdbcType="VARCHAR" />
      <arg column="create_date" javaType="java.util.Date" jdbcType="TIMESTAMP" />
    </constructor>
  </resultMap>

  <select id="queryTradeConfigListPage" parameterType="page" resultMap="BaseResultMap">
    select * from trade_config WHERE 1=1
    <if test="pd.symbol != null and pd.symbol != ''">
      AND symbol LIKE CONCAT(CONCAT('%', #{pd.symbol}),'%')
    </if>
    ORDER BY id DESC
  </select>

  <select id="getAllTradeConfig" resultMap="BaseResultMap">
    SELECT * FROM trade_config ORDER BY id DESC
  </select>
</mapper>